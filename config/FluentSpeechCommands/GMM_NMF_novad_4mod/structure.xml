<structure>
  <types>
    <object supertype="enumerable">
      juice
      newspaper
      shoes
      socks
    </object>
    <thing supertype="enumerable">
      lights
      lamp
      music
    </thing>
    <action supertype="enumerable">
      activate
      deactivate
    </action>
    <how supertype="enumerable">
      decrease
      increase
    </how>
    <what supertype="enumerable">
      volume
      heat
    </what>
    <where supertype="enumerable">
      washroom
      kitchen
      bedroom
    </where>
    <language supertype="enumerable">
      German
      English
      Chinese
      Korean
    </language>
  </types>
  <tasks>
    <bring object="object"/>
    <switch action="action" thing="thing"/>
    <switchwhere action="action" thing="thing" where="where"/>
    <change what="what" how="how"/>
    <changewhere what="what" how="how" where="where"/>
    <changelang language="language"/>
    <changelang2/>
  </tasks>
</structure>

